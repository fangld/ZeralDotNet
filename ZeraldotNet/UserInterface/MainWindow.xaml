<Window x:Class="UserInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zeral .Net" Height="480" Width="640">
    <Grid>
        <Button x:Name="btnOpenFile" Content="Open file..." HorizontalAlignment="Left" Margin="329,46,0,0" VerticalAlignment="Top" Width="89" RenderTransformOrigin="1.275,0.574" Click="btnOpenFile_Click"/>
        <TextBox x:Name="tbOpenFile" HorizontalAlignment="Left" Margin="10,46,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="314"/>
        <Button x:Name="btnOpenFolder" Content="Open folder..." HorizontalAlignment="Left" Margin="329,90,0,0" VerticalAlignment="Top" Width="89" Click="btnOpenFolder_Click"/>
        <TextBox x:Name="tbOpenFolder" HorizontalAlignment="Left" Margin="10,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="314"/>
        <Button x:Name="btnDownload" Content="Download" HorizontalAlignment="Left" Margin="10,128,0,0" VerticalAlignment="Top" Width="75" Click="btnDownload_Click"/>
        <RichTextBox x:Name="rtbLog" HorizontalAlignment="Left" Height="272" Margin="10,162,0,0" VerticalAlignment="Top" Width="606">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
